<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".SearchActivity">
    <ImageButton
        android:id="@+id/backbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/white"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_mylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourlocation"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_toRightOf="@id/backbutt"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_toRightOf="@id/tv_mylocation"
        android:layout_alignTop="@id/tv_mylocation"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/tv_mylocation"
        android:layout_toRightOf="@id/backbutt"
        android:layout_marginLeft="12dp"
        android:text="Banguntapan, Yogyakarta"/>
    <EditText
        android:layout_width="400dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/searchbg"
        android:id="@+id/input_search"
        android:hint="@string/ovc"
        android:textSize="14sp"
        android:layout_below="@id/place_name"
        android:inputType="text" />
    <ImageView
        android:layout_marginTop="12dp"
        android:layout_width="30dp"
        android:layout_marginLeft="15dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_search_24"
        android:id="@+id/search_mag"
        android:layout_below="@id/place_name"/>
    <TextView
        android:id="@+id/tv_titlehasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil_pencarian"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/input_search"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/img_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/result1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_titlehasil"
        android:layout_marginStart="10dp"
        android:onClick="opennext"/>
    <ImageView
        android:id="@+id/img_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/result2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/img_result1"
        android:layout_marginStart="10dp"
        android:onClick="opennext"/>
</RelativeLayout>