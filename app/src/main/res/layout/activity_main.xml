<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    tools:context=".MainActivity">
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/mylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Kamu"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_toRightOf="@id/mylocation"
        android:layout_alignTop="@id/mylocation"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@id/mylocation"
        android:layout_marginLeft="12dp"
        android:text="Banguntapan, Yogyakarta"/>

    <EditText
        android:layout_width="400dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:inputType=""
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="50dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/searchbg"
        android:id="@+id/inp_search"
        android:hint="@string/q1"
        android:textSize="14sp"
        android:layout_below="@id/place_name"/>
    <ImageView
        android:layout_marginTop="12dp"
        android:layout_width="30dp"
        android:layout_marginLeft="22dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_search_24"
        android:id="@+id/search_mag"
        android:layout_below="@id/place_name"
        android:onClick="openSearchActivity"/>

    <HorizontalScrollView
        android:id="@+id/banner"
        android:layout_below="@id/inp_search"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/over1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/picthov1"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:onClick="openSearchActivity"/>
            <ImageView
                android:id="@+id/over2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/picthov2"
                android:layout_toRightOf="@id/over1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"/>
            <ImageView
                android:id="@+id/over3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/picthov1"
                android:layout_toRightOf="@id/over2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/banner">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtspecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/dots"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo Hari Ini"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginRight="180dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/see_all"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/imgspecial"
        android:layout_below="@id/txtspecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgs1"
                android:layout_marginRight="16dp"/>
            <ImageView
                android:id="@+id/imgs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgs2"
                android:layout_marginRight="16dp"
                android:layout_below="@id/inp_search" />
            <ImageView
                android:id="@+id/imgs3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgs3"
                android:layout_marginRight="16dp"
                android:layout_below="@id/inp_search" />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/txtoffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/imgspecial"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spesial Hari Ini"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginRight="180dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/see_all"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/imgoffers"
        android:layout_below="@id/txtoffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgoffer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/offer1"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="-100dp"/>
            <ImageView
                android:id="@+id/imgoffer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/offer2"
                android:layout_marginRight="16dp"
                android:layout_below="@id/inp_search"
                android:layout_marginBottom="-100dp"/>
            <ImageView
                android:id="@+id/imgoffer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/offer3"
                android:layout_marginRight="16dp"
                android:layout_below="@id/inp_search"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
</ScrollView>