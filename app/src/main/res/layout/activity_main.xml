<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Kamu"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_toRightOf="@id/mylocation"
        android:layout_alignTop="@id/mylocation"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/mylocation"
        android:layout_marginLeft="12dp"
        android:text="Banguntapan, Yogyakarta"/>

    <EditText
        android:layout_width="400dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_margin="16dp"
        android:paddingLeft="45dp"
        android:textColorHint="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/searchbg"
        android:id="@+id/inp_search"
        android:hint="@string/q1"
        android:layout_below="@id/place_name"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="36dp"
        android:layout_marginLeft="22dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_search_24"
        android:id="@+id/search_mag_icon"
        android:layout_below="@id/place_name"/>
    <ImageView
        android:id="@+id/over1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picthov1"
        android:layout_below="@id/inp_search"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="-240dp"/>
    <ImageView
        android:id="@+id/over2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/picthov2"
        android:layout_toRightOf="@id/over1"
        android:layout_below="@id/inp_search"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"/>
    <ImageView
        android:id="@+id/over3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picthov1"
        android:layout_toRightOf="@id/over2"
        android:layout_marginRight="-300dp"
        android:layout_below="@id/inp_search"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"/>
    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/over2">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_baseline_brightness_1_24"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtspecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/dots"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spesial Hari Ini"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginRight="175dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Lihat Semua"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imgspecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txtspecial"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imgs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgs1"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:id="@+id/imgs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgs2"
            android:layout_marginRight="16dp"
            android:layout_below="@id/inp_search" />
        <ImageView
            android:id="@+id/imgs3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imgs3"
            android:layout_marginRight="-80dp"
            android:layout_below="@id/inp_search" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txtoffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/imgspecial"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spesial Hari Ini"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginRight="175dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Lihat Semua"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imgoffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txtoffers"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imgoffer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/offer1"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="-100dp"/>
        <ImageView
            android:id="@+id/imgoffer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/offer2"
            android:layout_marginRight="16dp"
            android:layout_below="@id/inp_search"
            android:layout_marginBottom="-100dp"/>
        <ImageView
            android:id="@+id/imgoffer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/offer3"
            android:layout_marginRight="-30dp"
            android:layout_below="@id/inp_search"/>
    </LinearLayout>
</RelativeLayout>